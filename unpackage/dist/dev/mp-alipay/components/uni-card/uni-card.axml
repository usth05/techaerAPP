<view data-event-opts="{{[['tap',[['onClick',['$event']]]]]}}" class="{{((('uni-card')+' '+((isFull===true||isFull==='true')?'uni-card--full':''))+' '+((isShadow===true||isShadow==='true')?'uni-card--shadow':''))}}" onTap="__e"><block a:if="{{mode==='style'}}"><view class="uni-card__thumbnailimage"><image src="{{thumbnail}}" mode="aspectFill"></image><block a:if="{{title}}"><view class="uni-card__thumbnailimage-title">{{title}}</view></block></view></block><block a:if="{{mode==='title'}}"><view class="uni-card__title"><view class="uni-card__title-header"><image src="{{thumbnail}}" mode="aspectFill"></image></view><view class="uni-card__title-content"><view class="uni-card__title-content-title">{{title}}</view><view class="uni-card__title-content-extra">{{extra}}</view></view></view></block><block a:if="{{mode==='basic'&&title}}"><view class="uni-card__header"><block a:if="{{thumbnail}}"><view class="uni-card__header-extra-img-view"><image class="uni-card__header-extra-img" src="{{thumbnail}}"></image></view></block><view class="uni-card__header-title-text">{{title}}</view><block a:if="{{extra}}"><view class="uni-card__header-extra-text">{{extra}}</view></block></view></block><view class="uni-card__content uni-card__content--pd"><block a:if="{{mode==='style'&&extra}}"><view class="uni-card__content-extra">{{extra}}</view></block><slot></slot></view><block a:if="{{note}}"><view class="uni-card__footer"><block a:if="{{$slots.footer}}"><slot name="footer"></slot></block><block a:else><text>{{note}}</text></block></view></block></view>